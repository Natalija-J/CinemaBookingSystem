@model MoviesModel

<ul class="nav nav-pills mb-3">
    @foreach (var category in Model.Categories)
    {
        <li class="nav-item">
            <a class="nav-link @(category.Id == Model.ActiveCategory?.Id ? "active" : "")" asp-controller="Movie" asp-action="MovieList" asp-route-id="@category.Id">@category.Title</a>
        </li>
    }
</ul>
@if (Model.ActiveCategory != null)
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">@Model.ActiveCategory.Title</li>
        </ol>
    </nav>
}
<br />
@if (Model.Movies != null)
{
    <div class="row">
        @foreach (var movie in Model.Movies)
        {
            <div class="col-md-4 col-sm-12 mb-3">
                <div class="card">
                    <img class="card-img-top" src="@movie.Image" alt="Card image cap">
                    <div class="card-body">
                        <a asp-controller="Movie" asp-action="AllMovies" asp-route-id="@movie.Id">@movie.Title</a>
                    </div>
                </div>
            </div>
        }

    </div>
}