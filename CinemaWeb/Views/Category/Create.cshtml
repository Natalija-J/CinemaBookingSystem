@model CategoryModel

@{
    var categoryList = new SelectList(Model.Categories, "Id", "Title");
}
<div asp-validation-summary="All"></div>

<form asp-controller="Topic" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="ParentCategoryId"></label>
        <select asp-for="ParentCategoryId" asp-items="categoryList" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Create a category</button>
</form>