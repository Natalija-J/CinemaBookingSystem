@model BookingsModel


<h1>Movies you have selected</h1>

<table class="table table-striped">
    <tr>
        <th style="text-align: left">Movie</th>
        <th style="text-align: left">Playing date </th>
        <th style="text-align: left">Time</th>
        <th style="text-align: left">Price</th>        
        <th style="text-align: center">Action</th>

    </tr>
    
    @foreach (var movie in Model.SelectedMovies)
    {

     <tr>
            <td>@movie.Title</td>
            <td>@movie.PlayingTime.ToString("dd.MM.yyyy")</td>
            <td>@movie.PlayingTime.ToString("HH:mm")</td>
            <td>@movie.PriceId</td>            
            <td style="text-align: center"><a asp-controller="Bookings" asp-action="Cancel">Cancel</a></td>

      </tr>
    }
</table>
