@model MovieModel

    <div class="container">
        <ul class="nav nav-pills">
            @foreach (var category in Model.Categories)
            {
                    <li class="nav-item">
                    <a class="nav-link @(category.Id == Model.Movie.Category ? "active" : "")" asp-controller="Cinema" asp-action="Categories" asp-route-id="@category.Id">@category.Title</a>
                </li>
            }
        </ul>
    </div>
        @if (Model.ActiveCategory != null)
        {
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active">>@Model.ActiveCategory.Title</li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Movie.Title</li>
                </ol>
            </nav>
        }

        <h6>Main Actor: @Model.Movie.MainActor <span class="badge badge-pill badge-light text-secondary">Directed by: @Model.Movie.Director</span></h6>

        <div class="row">
            <div class="col-md-12">
                <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em"></text></svg>

            </div>
            <div class="col-md-12">
                <p class="text-justify">@Model.Movie.TextAbout</p>
            </div>

        </div>

        <br />
        <table class="table table-striped">
            <tr>
                <th style="text-align: left">Movie</th>
                <th style="text-align: left">Date Playing</th>
                <th style="text-align: left">Time</th>
                <th style="text-align: left">Auditorium</th>
                <th style="text-align: left">Price</th>
                <th style="text-align: center">Select</th>
            </tr>

            <tr>
                <td>@Model.Movie.Title</td>
                <td>@Model.Movie.PlayingTime.ToString("dd.MM.yy")</td>
                <td>@Model.Movie.PlayingTime.ToString("HH.mm")</td>
                <td>@Model.Movie.AuditoriumId</td>
                <td>@Model.Movie.PriceId</td>
                <td style="text-align: center"><a asp-controller="Bookings" asp-action="Select" asp-route-id="@Model.Movie.Id">Add</a></td>
            </tr>
        </table>

        <br />
        
                <button type="button" class="btn btn-secondary" onclick="goBack()">Go Back</button>

                <script>
                    function goBack() {
                  window.history.back();
                }
        </script>
