@model CategoriesModel


<ul class="nav nav-pills">
    @foreach (var category in Model.Categories)
    {
        <li class="nav-item">
            <a class="nav-link @(category.Id == Model.ActiveCategory?.Id ? "active" : "")" asp-controller="Cinema" asp-action="Categories" asp-route-id="@category.Id">@category.Title</a>
        </li>
    }

</ul>
@if (Model.ActiveCategory != null)
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="Page2.html">@Model.ActiveCategory.Title</li>
        </ol>
    </nav>

}
<br />
@if (Model.Movies != null)
{
    <div class="row">
        @foreach (var movie in Model.Movies)
        {
            <div class="col-md-4 col-sm-12 mb-3">
                <div class="card" style="width: 18rem;">

                    <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em"></text></svg>
                    <div class="card-body">
                        <a class="card-link" asp-controller="Cinema" asp-action="SingleMovie" asp-route-id="@movie.Id">
                            <h6>@movie.Title</h6>
                        </a>
                    </div>

                </div>

            </div>
        }
    </div>
}